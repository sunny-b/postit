<%= render 'shared/error', item: @post %>

<div class="well">
  <%= form_for @post do |f| %>
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="control-group">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>

    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>

    <div class="control-group">
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b|%>
          <%= b.label(class: "checkbox inline") { b.check_box(class: "checkbox inline") + b.text } %>
      <% end %>
    </div>

    <br>
    <%= f.submit submit_value, class: 'btn btn-primary' %>
  <% end %>
</div>