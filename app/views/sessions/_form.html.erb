<div class="well">
  <%= form_tag login_path do %>
    <div class="control-group">
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </div>

    <div class="control-group">
      <%= label_tag :password %>
      <%= text_field_tag :password, nil, type: 'password' %>
    </div>

    <br>
    <%= submit_tag submit_value, class: 'btn btn-primary' %>
  <% end %>
</div>